<h2><%= @customer.name %>さんの会員情報編集</h2>
 <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :put, local:true do |f| %>
<table>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
         <%= f.text_field :last_name, autofocus: true %>
         <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autofocus: true %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.telephone_field :telephone_number, autofocus: true %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "退会" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit '変更を保存' %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>