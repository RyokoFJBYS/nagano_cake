<h2>ジャンル一覧・追加</h2>
<%= form_with model: [:admin, @genre], local:true do |f| %>
<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<table>
    <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tbody>
        <tr>
            <td>
                <%= genre.name %>
            </td>
            <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
            </td>
        </tr>
    </tbody>
    <% end %>
</table>