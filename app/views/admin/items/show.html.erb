<h2>商品詳細</h2>

<label>
  <%= attachment_image_tag @item, :image_id %>
</label>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre_id %></td>
    </tr>
    <tr>
      <td>税込価格<br>(税抜価格)</td>
      <td><%= @item.price.to_s(:delimited) %> (<%= @item.with_tax_price.to_s(:delimited) %>)円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</table>
<label><%= link_to "編集する", edit_admin_item_path(item.id) %></label>
