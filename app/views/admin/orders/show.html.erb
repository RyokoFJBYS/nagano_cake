<h2>注文履歴詳細</h2>

<table>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= link_to @order.customer.name, admin_customer_path(@customer.id) %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.postal_code %><span> </span><%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <%= form_with model: [:admin, @order], local:true do |f| %>
      <td><%= f.select :status, Order.statuses_i18n.invert %><%= f.submit "更新" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.with_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal.to_s(:delimited) %></td>
      <% total += order_detail.subtotal %>
      <td>
        <%= form_with model: [:admin, @order], local:true do |f| %>
        <%= f.select :making, OrderDetail.makings_i18n.invert %>
        <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= total.to_s(:delimited) %>円</td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
  </tr>
  <tr>
    <td>請求合計金額</td>
    <td><%= @order.total_payment.to_s(:delimited) %>円</td>
  </tr>
</table>
