<h2>ショッピングカート</h2>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <%= @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td></td>
      <td><%= cart_item.subtotal %></td>
      </tr>
    </tr>
  </tbody>
  
</table>