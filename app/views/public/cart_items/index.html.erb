<h2>ショッピングカート</h2>
<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill, 40, 40 %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <%= form_with model:cart_item, local:true do |f| %>
      <td><%= f.select :amount, *[1..10] %><%= f.submit "変更" %></td>
      <% end %>
      <td><%= cart_item.subtotal %></td>
      <td><%= button_to "削除する", cart_item_path(cart_item), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to items_path do %>
    <button class="btn btn-secondary btn-lg" >買い物を続ける</button>
  <% end %>
  <table>
    <tbody>
      <tr>
        <td>合計金額</td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <%= link_to new_order_path do %>
    <button class="btn btn-secondary btn-lg" >情報入力に進む</button>
  <% end %>
</div>