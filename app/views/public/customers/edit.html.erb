<h2>会員情報編集</h2>
 <%= form_with model: @customer, url: customers_path, method: :put, local:true do |f| %>
<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td>
         <%= f.text_field :last_name, autofocus: true %>
         <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autofocus: true %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.telephone_field :telephone_number, autofocus: true %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true %></td>
    </tr>
    <tr>
      <td>

      </td>
    </tr>
  </tbody>
</table>
<div>
  <label><%= f.submit '編集内容を変更を保存' %></label>
  <label><%= link_to "退会する", unsubscribe_customers_path %></label>
</div>
<% end %>

