<h1>新着商品</h1>
<% @items.first(4).each do |item| %>
<%= link_to item_path(item.id) do %>
  <%= attachment_image_tag item, :image, :fill, 250, 200 %>
<% end %>
<p><%= item.name %></p>
<p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
<% end %>

<div>
  <%= link_to "全ての商品を見る >", items_path %>
</div>