<h2>注文情報確認</h2>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill, 40, 40 %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <% total += cart_item.item.with_tax_price * cart_item.amount %>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>請求額</td>
      <td><% total_payment = @order.shipping_cost + total %><%= total_payment.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<h3>支払方法</h3>
<%= @order.payment_method_i18n %>

<h3>お届け先</h3>
<div>
  〒<%= @order.postal_code %><span> </span><%= @order.address %><br>
  <%= @order.name %>
</div>


<%= form_with model:@order, local:true do |f| %>
<%= f.hidden_field :cart_item, value: @cart_item %>
<%= f.submit "注文を確定する" %>
<% end %>